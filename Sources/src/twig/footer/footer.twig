{% set theme = data('theme.json') %}

<div class="site-footer">
    {% include '/components/decor.twig' with {inputs: {
        type: 'bottom',
        classes: 'site-footer__decor',
    }} %}
    <div class="site-footer__widgets">
        <div class="container">
            <div class="row">
                <div class="col-12 col-xl-4">
                    {% include '/footer/contacts.twig' %}
                </div>
                <div class="col-6 col-md-3 col-xl-2">
                    {% include '/footer/links.twig' with {inputs: {
                        title: 'Information',
                        links: [
                            {'title': 'About Us'},
                            {'title': 'Delivery Information'},
                            {'title': 'Privacy Policy'},
                            {'title': 'Brands'},
                            {'title': 'Contact Us'},
                            {'title': 'Returns'},
                            {'title': 'Site Map'},
                        ],
                    }} %}
                </div>
                <div class="col-6 col-md-3 col-xl-2">
                    {% include '/footer/links.twig' with {inputs: {
                        title: 'My Account',
                        links: [
                            {'title': 'Store Location'},
                            {'title': 'Order History'},
                            {'title': 'Wish List'},
                            {'title': 'Newsletter'},
                            {'title': 'Specials'},
                            {'title': 'Gift Certificates'},
                            {'title': 'Affiliate'},
                        ],
                    }} %}
                </div>
                <div class="col-12 col-md-6 col-xl-4">
                    {% include '/footer/newsletter.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="site-footer__bottom">
        <div class="container">
            <div class="site-footer__bottom-row">
                <div class="site-footer__copyright">
                    <!-- copyright -->
                    Powered by HTML â€” Designed by <a href="{{ theme.author.profile_url }}" target="_blank">{{ theme.author.name }}</a>
                    <!-- copyright / end -->
                </div>
                <div class="site-footer__payments">
                    <img src="images/payments.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
