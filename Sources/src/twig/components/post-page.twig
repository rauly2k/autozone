// - image:   boolean - featured image
// - sidebar: string  - one of [left, right, none]
#}

{% set image = inputs.image %}
{% set sidebar = inputs.sidebar|default('none') %}

{% set posts = data('blog-posts.json') %}
{% set comments = data('blog-post-comments.json') %}

{% set post_header_classes = classnames('post-view__header post-header', {
    'post-header--has-image': image,
}) %}

<div class="block post-view">
